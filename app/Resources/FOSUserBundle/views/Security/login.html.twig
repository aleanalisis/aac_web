{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="col-xs-12">
    <h2>Identificación de Usuarios</h2>
<form  role="form" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
<div class="row">
    <div class="col-xs-4 col-xs-offset-1">
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" 
                   required="required" placeholder="Su nombre de usuario o Email" autofocus />
        </div>
    </div>
    <div class="col-xs-12"></div>
    <div class="col-xs-3 col-xs-offset-1">
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-question-sign"></span></span>
            <input class="form-control" type="password" id="password" name="_password" 
                   placeholder="Su contraseña" required="required" />
        </div>
    </div>
    <!--
    <div class="col-md-12"></div>
    <div class="form-group">
    <label class="col-md-2 text-right" for="remember_me">{# 'security.login.remember_me'|trans #}me:</label>    
    <div class="col-md-1">
    <input class="checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on" />
    </div>
    </div>
    -->
    <div class="col-xs-12"><hr></div>
        <div class="col-xs-12 col-xs-offset-1">
            <button type="submit" class="btn btn-success" 
                     id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">
                <i class="glyphicon glyphicon-ok glyphicon glyphicon-white"></i>
                &nbsp;Entrar                
            </button>
        </div>
</div>
</form>
     <div class="col-md-12"><br></div>   
</div>
{% endblock fos_user_content %}
