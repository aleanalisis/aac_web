{% trans_default_domain 'FOSUserBundle' %}
<div class="col-md-12">
    <div class="col-md-offset-1">
        <h2>Registro de Usuarios</h2>
    </div>
    <hr>
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    <div class="form-group col-md-offset-1">
        {{ form_label(form.nombre, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.nombre,  {'attr': {'autofocus': 'autofocus', 'class': 'col-md-3', 
                                            'name' : "fos_user_registration_form[nombre]"}}) }}
    </div>
    {% if form_errors(form.nombre) is not empty %}
        <div class="col-md-10 col-md-offset-4 alert alert-danger">
            {{ form_errors(form.nombre) }}
        </div>
    {% elseif true %}
        <div class="col-md-10 col-md-offset-4"></div>                
    {% endif %}
    <!-- FIN nombre -->
    <div class="form-group col-md-offset-1">
        {{ form_label(form.username, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.username,  {'attr': {'class': 'col-md-3', 
                                            'name' : "fos_user_registration_form[username]"}}) }}
    </div>
    {% if form_errors(form.username) is not empty %}
        <div class="col-md-10 col-md-offset-4 alert alert-danger">
            {{ form_errors(form.username) }}
        </div>
    {% elseif true %}
        <div class="col-md-10 col-md-offset-4"></div>                
    {% endif %}
    <!-- FIN username -->
        <div class="form-group col-md-offset-1">
        {{ form_label(form.email, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.email,  {'attr': {'class': 'col-md-3', 
                                            'name' : "fos_user_registration_form[email]"}}) }}
    </div>
    {% if form_errors(form.email) is not empty %}
        <div class="col-md-10 col-md-offset-4 alert alert-danger">
            {{ form_errors(form.email) }}
        </div>
    {% elseif true %}
        <div class="col-md-10 col-md-offset-4"></div>                
    {% endif %}
    <!-- FIN email -->
    <div class="form-group col-md-offset-1">
        {{ form_label(form.telefono, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.telefono,  {'attr': {'autofocus': 'autofocus', 'class': 'col-md-2', 
                                            'name' : "fos_user_registration_form[telefono]"}}) }}
    </div>
    {% if form_errors(form.telefono) is not empty %}
        <div class="col-md-10 col-md-offset-4 alert alert-danger">
            {{ form_errors(form.telefono) }}
        </div>
    {% elseif true %}
        <div class="col-md-10 col-md-offset-4"></div>                
    {% endif %}
    <!-- FIN telefono -->
    
        <div class="form-group col-md-offset-1">
        {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.plainPassword.first,  {'attr': {'class': 'col-md-3', 
                                            'name' : "ffos_user_registration_form[plainPassword][first]"}}) }}
    </div>
    <div class="col-md-12"></div>
    <!-- FIN password.first -->
        <div class="form-group col-md-offset-1">
        {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.plainPassword.second,  {'attr': {'class': 'col-md-3', 
                                            'name' : "ffos_user_registration_form[plainPassword][second]"}}) }}
    </div>
    {% if form_errors(form.plainPassword.first) is not empty %}
        <div class="col-md-10 col-md-offset-4 alert alert-danger">
            {{ form_errors(form.plainPassword.first) }}
        </div>
    {% elseif true %}
        <div class="col-md-10 col-md-offset-4"></div>                
    {% endif %}
    <!-- FIN password.second -->
    {{ form_rest(form) }}
        <div class="col-md-12"><hr></div>
        <div class="col-md-12 col-md-offset-2">
            <button type="submit" class="btn btn-success" value="{{ 'registration.submit'|trans }}">
                <i class="glyphicon glyphicon-ok glyphicon glyphicon-white"></i>
                &nbsp;Aceptar
            </button>
            &nbsp;&nbsp;|&nbsp;&nbsp;
            <a href="#" class="btn btn-primary">
                <span class="glyphicon glyphicon-arrow-left"></span>
                &nbsp;&nbsp;Volver
            </a>

        </div>
<div class="col-md-12"><br></div>     

</form>
