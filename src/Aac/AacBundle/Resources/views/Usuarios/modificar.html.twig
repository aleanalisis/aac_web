{% extends '::layout_peque.html.twig' %}

{% block body %}
<div class="col-md-12">
    <div class="col-md-offset-2">
        <h2>{{ titulo }}</h2>
    </div>

    <form action="#" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
    <div class="form-group col-md-offset-1">
        {{ form_label(form.nombre, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.nombre,  {'attr': {'autofocus': 'autofocus', 'class': 'col-md-3', 
                                            'name' : "fos_user_registration_form[nombre]"}}) }}
    </div>
    {% if form_errors(form.nombre) is not empty %}
        <div class="col-md-10 col-md-offset-4 alert alert-danger">
            {{ form_errors(form.nombre) }}
        </div>
    {% elseif true %}
        <div class="col-md-10 col-md-offset-4"></div>                
    {% endif %}
    <!-- FIN nombre -->
    <div class="form-group col-md-offset-1">
        {{ form_label(form.username, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.username,  {'attr': {'class': 'col-md-3', 
                                            'name' : "fos_user_registration_form[username]"}}) }}
    </div>
    {% if form_errors(form.username) is not empty %}
        <div class="col-md-10 col-md-offset-4 alert alert-danger">
            {{ form_errors(form.username) }}
        </div>
    {% elseif true %}
        <div class="col-md-10 col-md-offset-4"></div>                
    {% endif %}
    <!-- FIN username -->
        <div class="form-group col-md-offset-1">
        {{ form_label(form.email, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.email,  {'attr': {'class': 'col-md-3', 
                                            'name' : "fos_user_registration_form[email]"}}) }}
    </div>
    {% if form_errors(form.email) is not empty %}
        <div class="col-md-10 col-md-offset-4 alert alert-danger">
            {{ form_errors(form.email) }}
        </div>
    {% elseif true %}
        <div class="col-md-10 col-md-offset-4"></div>                
    {% endif %}
    <!-- FIN email -->
    <div class="form-group col-md-offset-1">
        {{ form_label(form.telefono, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.telefono,  {'attr': {'class': 'col-md-2', 
                                            'name' : "fos_user_registration_form[telefono]"}}) }}
    </div>
    {% if form_errors(form.telefono) is not empty %}
        <div class="col-md-10 col-md-offset-4 alert alert-danger">
            {{ form_errors(form.telefono) }}
        </div>
    {% elseif true %}
        <div class="col-md-10 col-md-offset-4"></div>                
    {% endif %}
    <!-- FIN telefono -->
    <div class="form-group col-md-offset-1">
        {{ form_label(form.roles, null, {'label_attr': {'class': 'col-md-2 control-label text-right'}}) }}

            {{ form_widget(form.roles,  {'attr': {'class': 'col-md-3', 
                                            'name' : "fos_user_registration_form[roles]"}}) }}

    </div>
    {% if form_errors(form.roles) is not empty %}
            <div class="col-md-10 col-md-offset-4 alert alert-danger">
                {{ form_errors(form.roles) }}
            </div>
    {% elseif true %}
        <div class="col-md-10 col-md-offset-4"></div>                
    {% endif %}        
    <!-- FIN role -->
    {{ form_rest(form) }}
        <div class="col-md-12"><hr></div>
        <div class="col-md-12 col-md-offset-2">
            <button type="submit" name="submit" class="btn btn-success" value="submit">
                <i class="glyphicon glyphicon-ok glyphicon glyphicon-white"></i>
                &nbsp;Aceptar
            </button>
            &nbsp;&nbsp;|&nbsp;&nbsp;
            <a href="{{ path('usuarios') }}" class="btn btn-primary">
                <span class="glyphicon glyphicon-arrow-left"></span>
                &nbsp;&nbsp;Volver
            </a>

        </div>
<div class="col-md-12"><br></div>        
    </form>
               
</div>
{% endblock %}
